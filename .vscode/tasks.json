{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PDF with XeLaTeX",
            "type": "shell",
            "command": "xelatex",
            "args": [
                "-halt-on-error",
                "-output-directory=out",
                "-jobname=${workspaceFolderBasename}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}